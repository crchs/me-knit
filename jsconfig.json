{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "paths": {
      "@pages": [ "pages" ],
      "@app": [ "app" ],
      "@entities": [ "entities" ],
      "@shared": [ "shared" ],
      "@widgets": [ "widgets" ],
      "@features": [ "features" ],
